<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:src="@drawable/background_bottom_sheet_dialog_add_memo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/category_edit_x_btn"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/category_edit_x_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="카테고리 추가"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <EditText
        android:id="@+id/category_add_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="카테고리명을 입력해주세요."
        android:text=""
        android:textSize="20dp"
        android:background="@drawable/background_category_edit"
        android:layout_marginTop="30dp"
        android:paddingLeft="15dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="색상"
        android:textSize="18dp"
        android:layout_marginTop="40dp"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TableRow>

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp">

                <ImageView
                    android:id="@+id/category_color_1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/category_color_1" />

                <ImageView
                    android:id="@+id/category_color1_check"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/category_color_check"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp">

                <ImageView
                    android:id="@+id/category_color_2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/category_color_2" />

                <ImageView
                    android:id="@+id/category_color2_check"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/category_color_check"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp">

                <ImageView
                    android:id="@+id/category_color_3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/category_color_3" />

                <ImageView
                    android:id="@+id/category_color3_check"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/category_color_check"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp">

                <ImageView
                    android:id="@+id/category_color_4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/category_color_4" />

                <ImageView
                    android:id="@+id/category_color4_check"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/category_color_check"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp">

                <ImageView
                    android:id="@+id/category_color_5"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/category_color_5" />

                <ImageView
                    android:id="@+id/category_color5_check"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/category_color_check"
                    android:visibility="gone" />

            </RelativeLayout>

        </TableRow>

        <TableRow android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp">

                <ImageView
                    android:id="@+id/category_color_6"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/category_color_6" />

                <ImageView
                    android:id="@+id/category_color6_check"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/category_color_check"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp">

                <ImageView
                    android:id="@+id/category_color_7"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/category_color_7" />

                <ImageView
                    android:id="@+id/category_color7_check"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/category_color_check"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp">

                <ImageView
                    android:id="@+id/category_color_8"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/category_color_8" />

                <ImageView
                    android:id="@+id/category_color8_check"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/category_color_check"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp">

                <ImageView
                    android:id="@+id/category_color_9"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/category_color_9" />

                <ImageView
                    android:id="@+id/category_color9_check"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/category_color_check"
                    android:visibility="gone" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="15dp">

                <ImageView
                    android:id="@+id/category_color_10"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/category_color_10" />

                <ImageView
                    android:id="@+id/category_color10_check"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/category_color_check"
                    android:visibility="gone" />

            </RelativeLayout>

        </TableRow>

    </TableLayout>

    <android.widget.Button
        android:id="@+id/category_add_no_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="완료"
        android:layout_marginTop="40dp"/>

    <android.widget.Button
        android:id="@+id/category_add_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="완료"
        android:layout_marginTop="40dp"
        android:background="@color/add_btn"
        android:visibility="gone"/>

</LinearLayout>