<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.softsquared.template.kotlin">

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- 카메라 -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".config.ApplicationClass"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup">

        <!-- MyPage -->
        <activity android:name=".src.main.mypage.MyPageActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <!-- CategoryEdit -->
        <activity android:name=".src.main.category.CategoryEditActivity"
            android:theme="@style/AppTheme2"/>
        <activity android:name=".src.auth.test.Test"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".src.splash.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".src.main.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <!-- Auth -->
        <!-- Information -->
        <activity
            android:name=".src.auth.information.InformationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" /> <!-- Login_Information -->
        <activity
            android:name=".src.auth.loginInformation.LoginInformation"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" /> <!-- Login -->
        <activity
            android:name=".src.auth.login.LoginActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".src.auth.loginInformation.LoginInformation"
            android:theme="@style/AppTheme.NoActionBar" /> <!-- SignUp -->
        <activity
            android:name=".src.auth.signup.SignUpActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".src.auth.loginInformation.LoginInformation"
            android:theme="@style/AppTheme.NoActionBar" />

        <!--카카오 로그인-->
        <activity android:name="com.kakao.sdk.auth.AuthCodeHandlerActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- Redirect URI: "kakao{NATIVE_APP_KEY}://oauth“ -->
                <data
                    android:host="oauth"
                    android:scheme="kakao850f56e3e5ba5613faf68a8aaa4b95bc" />
            </intent-filter>

        </activity>

        <!-- 카메라 -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.softsquared.template.kotlin.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>